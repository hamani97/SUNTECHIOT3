<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="6dp"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal">

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="@string/list_item_total"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />
        <TextView
                android:id="@+id/tv_item_downtime_total"
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="@string/list_item_down_time"
                android:textSize="15sp"
                android:textColor="#333"/>

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal">

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="@string/list_item_planned_time"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />
        <TextView
                android:id="@+id/tv_item_downtime_total1"
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="0"
                android:textSize="15sp"
                android:textColor="#333"/>

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:orientation="horizontal">

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="FINAL"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />
        <TextView
                android:id="@+id/tv_item_downtime_total2"
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/colorRed"
                android:textStyle="bold"/>

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

        <TextView
                style="@style/grid_header_text"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:text=""
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
