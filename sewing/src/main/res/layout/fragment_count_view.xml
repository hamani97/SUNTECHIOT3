<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".CountViewFragment">

    <!--Total View Count-->
    <LinearLayout
            android:id="@+id/ll_total_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:visibility="visible">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <!--Repair Mode-->
            <LinearLayout
                    android:id="@+id/ll_repair_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:gravity="center|bottom"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tv_repair_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="REPAIR MODE"
                            android:textSize="85sp"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_test_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <!-- Trim -->
                    <LinearLayout style="@style/table_row" android:layout_width="wrap_content" android:layout_marginLeft="20dp">
                        <TextView style="@style/table_row_title" android:text="TRIM TEST" />
                        <TextView style="@style/table_row_data_readonly"
                                  android:id="@+id/tv_test_trim"
                                  android:layout_width="70dp"
                                  android:gravity="center" />
                    </LinearLayout>

                    <!-- Stitch -->
                    <LinearLayout style="@style/table_row" android:layout_width="wrap_content" android:layout_marginLeft="20dp">
                        <TextView style="@style/table_row_title" android:text="STITCH TEST" android:layout_width="130dp" />
                        <TextView style="@style/table_row_data_readonly"
                                  android:id="@+id/tv_test_stitch"
                                  android:layout_width="70dp"
                                  android:gravity="center" />
                        <Button
                                android:id="@+id/btn_test_mode_refresh"
                                style="@style/tab_btn_on"
                                android:layout_marginLeft="20dp"
                                android:stateListAnimator="@null"
                                android:text="REFRESH" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    <Button
                            android:id="@+id/btn_go_count_mode"
                            style="@style/btn_default"
                            android:layout_width="130dp"
                            android:background="@color/colorButtonBlue"
                            android:stateListAnimator="@null"
                            android:text="COUNT MODE" />
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">
                        <Button
                                android:id="@+id/btn_go_test_mode"
                                style="@style/btn_default"
                                android:layout_width="130dp"
                                android:background="@color/colorButtonOrange"
                                android:stateListAnimator="@null"
                                android:text="TEST MODE" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--Count Mode-->
            <LinearLayout
                    android:id="@+id/ll_count_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/label_target"
                                android:textSize="66sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_count_view_target"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="0"
                                android:textSize="66sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="@string/label_actual"
                                android:textSize="66sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_count_view_actual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="0"
                                android:textSize="66sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:text="@string/label_rate"
                                android:textSize="66sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_current_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|bottom"
                                android:text="2000-01-01"
                                android:textSize="15sp"
                                android:textColor="@color/colorWhite" />

                        <TextView
                                android:id="@+id/tv_count_view_ratio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:text="0%"
                                android:textSize="66sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                        <Button
                                android:id="@+id/btn_go_repair_mode"
                                style="@style/btn_default"
                                android:layout_width="130dp"
                                android:background="@color/colorButtonBlue"
                                android:stateListAnimator="@null"
                                android:text="REPAIR MODE" />

                        <LinearLayout android:layout_width="0dp"
                                      android:layout_height="wrap_content"
                                      android:layout_weight="1"
                                      android:orientation="horizontal"
                                      android:gravity="center"
                                      android:layout_gravity="center">
                            <TextView
                                    android:id="@+id/tv_kind_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="TRIM  :  "
                                    android:textSize="16sp"
                                    android:textColor="@color/colorWhite" />
                            <TextView
                                    android:id="@+id/tv_kind_qty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorWhite" />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="        PAIR(S)  :  "
                                    android:textSize="16sp"
                                    android:textColor="@color/colorWhite" />
                            <TextView
                                    android:id="@+id/tv_kind_pairs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/colorWhite" />
                        </LinearLayout>

                        <!--<TextView-->
                                <!--android:id="@+id/tv_trim_qty"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="2"-->
                                <!--android:gravity="center"-->
                                <!--android:layout_gravity="center"-->
                                <!--android:text="TRIM  :  3"-->
                                <!--android:textSize="16sp"-->
                                <!--android:textColor="@color/colorWhite" />-->

                        <!--<TextView-->
                                <!--android:id="@+id/tv_stitch_qty"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="3"-->
                                <!--android:gravity="center"-->
                                <!--android:layout_gravity="center"-->
                                <!--android:text="STITCH  :  0"-->
                                <!--android:textSize="16sp"-->
                                <!--android:textColor="@color/colorWhite" />-->
                        <Button
                                android:id="@+id/btn_init_actual"
                                style="@style/btn_default"
                                android:stateListAnimator="@null"
                                android:text="EDIT" />

                    </LinearLayout>
                </LinearLayout>

                <!-- 차트 -->
                <LinearLayout
                        android:id="@+id/ll_charts"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#222222"
                        android:visibility="visible">

                    <TextView
                            android:id="@+id/tv_btn_wos_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="COMP COUNT"
                            android:textSize="18sp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textColor="@color/colorOrange"
                            android:background="#383838" />

                    <LinearLayout
                            android:id="@+id/ll_btn_wos_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:orientation="vertical">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SIZE  "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            <TextView
                                    android:id="@+id/tv_count_view_csize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorOrange"
                                    android:textStyle="bold"
                                    android:textSize="18sp" />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PAIR(S)  "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            <TextView
                                    android:id="@+id/tv_count_view_clayer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="18sp" />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="20dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TARGET  "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            <TextView
                                    android:id="@+id/tv_count_view_ctarget"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="18sp" />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ACTUAL  "
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            <TextView
                                    android:id="@+id/tv_count_view_cactual"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="18sp" />
                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                            <com.dinuscxj.progressbar.CircleProgressBar
                                    android:id="@+id/line_progress1"
                                    android:layout_width="90dp"
                                    android:layout_height="90dp"
                                    android:layout_centerInParent="true"
                                    app:background_color="@color/colorWhite"
                                    app:progress_start_color="#ff0000"
                                    app:progress_end_color="#ff0000"
                                    app:progress_background_color="@color/colorWhite"
                                    app:progress_text_color="@color/colorBlack"
                                    app:draw_progress_text="false"
                                    app:progress_text_size="24dp"
                                    app:style="solid"
                                    android:progress="50"/>

                            <TextView
                                    android:id="@+id/tv_count_view_crate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="10%"
                                    android:textSize="20sp"
                                    android:textColor="#000"/>

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- 서버차트 -->
                <LinearLayout
                        android:id="@+id/ll_server_charts"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#222222"
                        android:visibility="visible">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="OEE"
                            android:textSize="13sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/oee_progress"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorWhite"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_oee_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="10%"
                                android:textSize="14sp"
                                android:textColor="#000"/>
                    </RelativeLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Availability"
                            android:textSize="13sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/availability_progress"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorWhite"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_availability_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="10%"
                                android:textSize="14sp"
                                android:textColor="#000"/>
                    </RelativeLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Performance"
                            android:textSize="13sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/performance_progress"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorWhite"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_performance_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="10%"
                                android:textSize="14sp"
                                android:textColor="#000"/>
                    </RelativeLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Quality"
                            android:textSize="13sp"
                            android:textColor="@color/colorWhite2"
                            android:background="#383838" />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                        <com.dinuscxj.progressbar.CircleProgressBar
                                android:id="@+id/quality_progress"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerInParent="true"
                                app:background_color="@color/colorReadonly2"
                                app:progress_start_color="#ff0000"
                                app:progress_end_color="#ff0000"
                                app:progress_background_color="@color/colorWhite"
                                app:progress_text_color="@color/colorBlack"
                                app:draw_progress_text="false"
                                app:progress_text_size="24dp"
                                app:style="solid"
                                android:progress="0"/>
                        <TextView
                                android:id="@+id/tv_quality_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="10%"
                                android:textSize="14sp"
                                android:textColor="#000"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <include layout="@layout/layout_bottom_info_3"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>


    <!--Component View Count-->
    <LinearLayout
            android:id="@+id/ll_component_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorBackground"
            android:visibility="gone">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="start"
                                android:text="@string/label_target"
                                android:textSize="56sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_component_view_target"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:text="100"
                                android:textSize="56sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_component_time"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="end"
                                android:layout_gravity="center"
                                android:text="2000-01-01"
                                android:textSize="16sp"
                                android:textColor="@color/colorWhite" />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:gravity="start"
                                android:text="@string/label_actual"
                                android:textSize="56sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_component_view_actual"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="end"
                                android:text="30"
                                android:textSize="56sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                        <TextView
                                android:id="@+id/tv_component_view_ratio"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="end"
                                android:layout_gravity="center"
                                android:text="30%"
                                android:textSize="56sp"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginTop="16dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="#304053">
                        <TextView
                                android:id="@+id/tv_count_wos_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:gravity="center"
